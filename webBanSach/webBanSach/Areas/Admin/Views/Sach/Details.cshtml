@model webBanSach.Models.Sach

@{
    ViewData["Title"] = "Chi tiết sách";
}

<div class="row">
    <!-- Thông tin sản phẩm -->
    <div class="col-md-8">
        <div class="card shadow-sm mb-4">
            <div class="card-header bg-light fw-bold">
                📘 Thông tin sách
            </div>
            <div class="card-body">
                <div class="row">
                    <!-- Ảnh sách -->
                    <div class="col-md-4 text-center">
                        <img src="~/images/sach/@Model.HinhAnh"
                             class="img-fluid rounded border"
                             alt="@Model.TenSach"
                             style="max-height:250px; object-fit:cover;" />
                    </div>

                    <!-- Thông tin -->
                    <div class="col-md-8">
                        <p><strong>ID sách:</strong> #@Model.MaSach</p>
                        <p><strong>Tên sách:</strong> @Model.TenSach</p>
                        <p><strong>NXB:</strong> @Model.MaNXBNavigation?.TenNXB</p>
                        <p><strong>Năm xuất bản:</strong> @Model.NamXB</p>
                        <p>
                            <strong>Giá bán:</strong>
                            <span class="text-danger fw-bold">
                                @string.Format("{0:N0} VNĐ", Model.GiaBan)
                            </span>
                        </p>
                        <p>
                            <strong>Trạng thái:</strong>
                            @if (Model.SoLuong > 0)
                            {
                                <span class="badge bg-success">Còn hàng</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Hết hàng</span>
                            }
                        </p>
                        <p><strong>File ảnh:</strong> @Model.HinhAnh</p>
                    </div>
                </div>
                <hr />
                <h6>📖 Mô tả sách:</h6>
                <p>@Model.MoTa</p>
            </div>
        </div>
    </div>

    <!-- Thao tác -->
    <div class="col-md-4">
        <div class="card shadow-sm mb-3">
            <div class="card-header bg-light fw-bold">⚙️ Thao tác</div>
            <div class="card-body">
                <a asp-action="Edit" asp-route-id="@Model.MaSach" class="btn btn-warning w-100 mb-2">
                    ✏️ Chỉnh sửa sách
                </a>

                <!-- Nút mở modal xoá -->
                <button type="button" class="btn btn-danger w-100 mb-2"
                        data-bs-toggle="modal"
                        data-bs-target="#confirmDeleteModal"
                        data-id="@Model.MaSach"
                        data-name="@Model.TenSach">
                    🗑️ Xóa sách
                </button>

                <a asp-action="Index" class="btn btn-info w-100">
                    🔙 Quay lại danh sách
                </a>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-header bg-light fw-bold">📊 Thống kê</div>
            <div class="card-body">
                <p><strong>Lượt xem:</strong> @Model.LuotXem</p>
                <p><strong>Đã bán:</strong> @ViewBag.DaBan</p>
                <small class="text-muted">📅 Cập nhật cuối: @DateTime.Now.ToString("dd/MM/yyyy")</small>
            </div>
        </div>

<!-- Modal xác nhận xóa -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa sách <strong id="deleteItemName"></strong>?
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    <input type="hidden" name="id" id="deleteItemId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('confirmDeleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var name = button.getAttribute('data-name');

            document.getElementById('deleteItemName').textContent = name;
            document.getElementById('deleteItemId').value = id;

            // Gửi form về DeleteConfirmed
            document.getElementById('deleteForm').action = '/Admin/Sach/Delete/' + id;
        });
    </script>
}
