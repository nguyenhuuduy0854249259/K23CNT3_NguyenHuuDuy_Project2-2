@* Areas/Admin/Views/Shared/_LayoutAdmin.cshtml *@
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản trị Web Bán Sách</title>

    <!-- Bootstrap & Font Awesome -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

    <!-- Theme CSS chung cho admin -->
    <link rel="stylesheet" href="~/css/admin-theme.css" />

    <style>
        /* Sidebar */
        body {
            min-height: 100vh;
            display: flex;
            transition: background 0.3s, color 0.3s;
        }

        .sidebar {
            width: 250px;
            flex-shrink: 0;
            transition: background 0.3s, color 0.3s;
        }

            .sidebar a {
                color: #adb5bd;
                display: block;
                padding: 10px 20px;
                text-decoration: none;
                transition: background 0.3s, color 0.3s;
            }

                .sidebar a:hover, .sidebar .active {
                    background: #495057;
                    color: #fff;
                }

        .content {
            flex-grow: 1;
            padding: 20px;
            transition: background 0.3s, color 0.3s;
        }

        /* Dark/Light Mode chung */
        body.dark {
            background: #1e1e2f;
            color: #f1f1f1;
        }

            body.dark .sidebar {
                background: #212529;
            }

                body.dark .sidebar a {
                    color: #dee2e6;
                }

                    body.dark .sidebar a:hover, body.dark .sidebar .active {
                        background: #343a40;
                        color: #fff;
                    }

            body.dark .content {
                background: #2c3034;
            }

            body.dark .navbar {
                background: #343a40 !important;
            }

                body.dark .navbar a, body.dark .navbar .navbar-brand {
                    color: #e9ecef !important;
                }

            body.dark input, body.dark select, body.dark textarea {
                background: #495057;
                color: #f8f9fa;
                border: 1px solid #6c757d;
            }

                body.dark input:focus, body.dark select:focus, body.dark textarea:focus {
                    background: #6c757d;
                    border-color: #adb5bd;
                    color: #fff;
                }

            body.dark .btn-primary {
                background: #0d6efd;
                border-color: #0d6efd;
            }

        /* Card thống kê */
        .stat-card {
            transition: all 0.3s ease-in-out;
            border-radius: 12px;
        }

            .stat-card:hover {
                transform: translateY(-5px) scale(1.02);
                box-shadow: 0 8px 20px rgba(0,0,0,0.15);
            }

        /* Table đồng bộ giá tiền */
        .table td.price-cell {
            font-weight: bold;
            transition: color 0.3s;
        }

        body:not(.dark) .table td.price-cell {
            color: #198754;
        }

        body.dark .table td.price-cell {
            color: #fff;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h4 class="p-3">Quản trị</h4>
        <a asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-gauge"></i> Dashboard</a>
        <a asp-area="Admin" asp-controller="Sach" asp-action="Index"><i class="fa-solid fa-book"></i> Quản lý sách</a>
        <a asp-area="Admin" asp-controller="LoaiSach" asp-action="Index"><i class="fa-solid fa-list"></i> Loại sách</a>
        <a asp-area="Admin" asp-controller="NhaXuatBan" asp-action="Index"><i class="fa-solid fa-building"></i> Nhà xuất bản</a>
        <a asp-area="Admin" asp-controller="NguoiDung" asp-action="Index"><i class="fa-solid fa-users"></i> Người dùng</a>
        <a asp-area="Admin" asp-controller="DonHang" asp-action="Index"><i class="fa-solid fa-cart-shopping"></i> Đơn hàng</a>
        <a asp-area="Admin" asp-controller="KhuyenMai" asp-action="Index"><i class="fa-solid fa-tags"></i> Khuyến mãi</a>
        <a asp-area="Admin" asp-controller="LienHe" asp-action="Index"><i class="fa-solid fa-envelope"></i> Liên hệ</a>
    </div>

    <!-- Main Content -->
    <div class="content">
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="Admin" asp-controller="Home" asp-action="Index">Trang quản trị</a>
                <div class="d-flex gap-2">
                    <button id="toggleTheme" class="btn btn-outline-secondary"><i class="fa-solid fa-moon"></i></button>
                    <a class="btn btn-outline-danger" href="/User/Logout"><i class="fa-solid fa-right-from-bracket"></i> Đăng xuất</a>
                </div>
            </div>
        </nav>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        $(document).ready(function () {
            if (localStorage.getItem("theme") === "dark") {
                $("body").addClass("dark");
                $("#toggleTheme i").removeClass("fa-moon").addClass("fa-sun");
            }

            $("#toggleTheme").click(function () {
                $("body").toggleClass("dark");
                if ($("body").hasClass("dark")) {
                    $("#toggleTheme i").removeClass("fa-moon").addClass("fa-sun");
                    localStorage.setItem("theme", "dark");
                } else {
                    $("#toggleTheme i").removeClass("fa-sun").addClass("fa-moon");
                    localStorage.setItem("theme", "light");
                }
                document.dispatchEvent(new Event("darkModeChanged"));
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
