@{
    Layout = null;
}
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - webBanSach</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/webBanSach.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <style>
        /* HEADER */
        .top-header {
            background: #fff;
            padding: 12px 20px;
            border-bottom: 1px solid #eee;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .top-header .logo {
                font-size: 26px;
                font-weight: bold;
                color: #28a745;
            }

        .search-box {
            flex: 1;
            margin: 0 20px;
            display: flex;
        }

            .search-box input {
                flex: 1;
                padding: 10px;
                border: 1px solid #ccc;
                border-right: none;
                border-radius: 4px 0 0 4px;
            }

            .search-box button {
                border: none;
                background: #28a745;
                color: #fff;
                padding: 0 20px;
                border-radius: 0 4px 4px 0;
            }

        .top-header .contact {
            font-size: 14px;
            color: #333;
            white-space: nowrap;
        }

        .cart a {
            text-decoration: none;
            font-weight: 500;
            color: #333;
        }

        /* SIDEBAR */
        .sidebar {
            width: 250px;
            background: #fff;
            border: 1px solid #ddd;
            padding: 0;
        }

        .sidebar-title {
            background: #f57c00;
            color: white;
            padding: 12px;
            font-size: 16px;
            text-align: center;
            font-weight: bold;
            margin: 0;
        }

        .category-list {
            list-style: none;
            margin: 0;
            padding: 0;
        }

            .category-list li {
                border-bottom: 1px solid #eee;
            }

                .category-list li a {
                    display: block;
                    padding: 10px 15px;
                    color: #333;
                    text-decoration: none;
                    font-size: 15px;
                    transition: 0.2s;
                }

                    .category-list li a:hover {
                        background: #f5f5f5;
                        color: #f57c00;
                    }

                .category-list li ul.submenu {
                    display: none;
                    list-style: none;
                    padding: 0;
                    margin: 0;
                    background: #fff;
                    border-left: 2px solid #f57c00;
                }

                .category-list li:hover > ul.submenu {
                    display: block;
                }

                .category-list li ul.submenu li a {
                    padding: 8px 20px;
                    font-size: 14px;
                }

        .category-search {
            padding: 10px;
            border-top: 1px solid #eee;
        }

        /* MAIN CONTENT */
        .main-content {
            flex: 1;
            padding: 20px;
            background: #fafafa;
        }

        /* FOOTER */
        footer {
            margin-top: 20px;
            padding: 15px;
            background: #f9f9f9;
            border-top: 1px solid #ddd;
        }
    </style>
</head>
<body>
    <!-- HEADER -->
    <header class="top-header">
        <div class="logo d-flex align-items-center gap-2">
            <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center gap-2 text-decoration-none">
                <img src="~/images/logo.jpg" width="50" height="50" alt="Logo WebBanSach" class="rounded-circle" />
                <span class="fw-bold text-dark">BookStore</span>
            </a>
        </div>

        <div class="search-box">
            <input type="text" placeholder="Tìm kiếm sản phẩm..." />
            <button><i class="bi bi-search"></i></button>
        </div>

        <div class="contact me-3">
            <i class="bi bi-telephone-fill text-success"></i> Tư vấn: 028.73008182
        </div>

        <div class="cart me-3">
            <a asp-area="" asp-controller="GioHangs" asp-action="Index">
                <i class="bi bi-cart-fill"></i> Giỏ hàng
                <span class="badge bg-danger">@ViewBag.CartCount ?? 0</span>
            </a>
        </div>

        <!-- Đăng nhập / Đăng xuất -->
        <div class="d-flex align-items-center">
            @if (HttpContextAccessor.HttpContext.Session.GetString("UserName") != null)
            {
                var userName = HttpContextAccessor.HttpContext.Session.GetString("UserName");
                var avatar = HttpContextAccessor.HttpContext.Session.GetString("UserAvatar");
                var loaiNguoiDung = HttpContextAccessor.HttpContext.Session.GetString("LoaiNguoiDung");

                if (loaiNguoiDung == "User")
                {
                    <img src="@avatar" alt="avatar" width="35" height="35" class="rounded-circle me-2 border" />
                }

                <span class="me-2 text-success">Xin chào, @userName</span>
                <a asp-controller="Account" asp-action="Logout" class="btn btn-sm btn-outline-danger">Đăng xuất</a>
            }
            else
            {
                <a asp-controller="Account" asp-action="Login" class="btn btn-sm btn-outline-primary me-2">Đăng nhập</a>
                <a asp-controller="Account" asp-action="Register" class="btn btn-sm btn-success">Đăng ký</a>
            }
        </div>

    </header>

    <!-- BODY -->
    <div class="container-fluid d-flex mt-3">
        <!-- SIDEBAR -->
        <nav class="sidebar">
            <h5 class="sidebar-title">Danh mục sản phẩm</h5>
            <ul class="category-list">
                <li>
                    <a href="#">Sách Truyện <span class="float-end">▶</span></a>
                    <ul class="submenu">
                        <li><a asp-controller="Sach" asp-action="SearchByCategory" asp-route-theloai="Tiểu thuyết">Tiểu thuyết</a></li>
                        <li><a asp-controller="Sach" asp-action="SearchByCategory" asp-route-theloai="Khoa học">Khoa học</a></li>
                        <li><a asp-controller="Sach" asp-action="SearchByCategory" asp-route-theloai="Giáo khoa">Giáo khoa</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#">Sách theo tác giả <span class="float-end">▶</span></a>
                    <ul class="submenu">
                        <li><a asp-controller="Sach" asp-action="SearchByAuthor" asp-route-tacgia="Dale Carnegie">Dale Carnegie</a></li>
                        <li><a asp-controller="Sach" asp-action="SearchByAuthor" asp-route-tacgia="Nguyễn Nhật Ánh">Nguyễn Nhật Ánh</a></li>
                        <li><a asp-controller="Sach" asp-action="SearchByAuthor" asp-route-tacgia="NXB Văn Học">NXB Văn Học</a></li>
                    </ul>
                </li>
                <li>
                    <a href="#">Sách theo NXB <span class="float-end">▶</span></a>
                    <ul class="submenu">
                        <li><a asp-controller="Sach" asp-action="SearchByPublisher" asp-route-nxb="NXB Trẻ">NXB Trẻ</a></li>
                        <li><a asp-controller="Sach" asp-action="SearchByPublisher" asp-route-nxb="NXB Kim Đồng">NXB Kim Đồng</a></li>
                        <li><a asp-controller="Sach" asp-action="SearchByPublisher" asp-route-nxb="NXB Văn Học">NXB Văn Học</a></li>
                    </ul>
                </li>
                <li><a href="#">Sách Sale theo chủ đề</a></li>
                <li><a href="#">Văn phòng phẩm (sắp có)</a></li>
                <li><a href="#">Quà tặng (sắp có)</a></li>
                <li><a href="#">Đồ chơi (sắp có)</a></li>
                <li><a href="#">Blog sách hay (sắp có)</a></li>
            </ul>

            <!-- Search in category -->
            <div class="category-search">
                <input type="text" class="form-control" placeholder="🔍 Tìm trong danh mục..." />
            </div>
        </nav>

        <!-- MAIN CONTENT -->
        <div class="main-content">
            @RenderBody()
        </div>
    </div>

    <!-- FOOTER -->
    <footer class="bg-light text-dark mt-5 pt-4 pb-3 border-top">
        <div class="container">
            <div class="row">
                <!-- Logo & thông tin công ty -->
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold">📚 WebBanSach</h5>
                    <p>Địa chỉ: 123 Nguyễn Văn Cừ, Hà Nội</p>
                    <p>Giấy phép KD: 0101234567</p>
                </div>

                <!-- Dịch vụ -->
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold">Dịch vụ</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="About" class="text-decoration-none text-dark">Giới thiệu</a></li>
                        <li><a href="#" class="text-decoration-none text-dark">Chính sách bảo mật</a></li>
                        <li><a href="#" class="text-decoration-none text-dark">Điều khoản sử dụng</a></li>
                    </ul>
                </div>

                <!-- Liên hệ -->
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold">Liên hệ</h6>
                    <p>📞 0123 456 789</p>
                    <p>✉️ support@webbansach.com</p>
                    <div>
                        <a href="#"><i class="bi bi-facebook fs-4 me-2"></i></a>
                        <a href="#"><i class="bi bi-instagram fs-4 me-2"></i></a>
                        <a href="#"><i class="bi bi-youtube fs-4"></i></a>
                    </div>
                </div>
            </div>

            <div class="text-center small text-muted mt-3">
                © 2025 - WebBanSach. All rights reserved.
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
