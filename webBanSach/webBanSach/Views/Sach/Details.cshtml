@model webBanSach.Models.Sach

@{
    ViewData["Title"] = "Chi tiết sách";
    var userId = Context.Session.GetInt32("MaND"); // kiểm tra đã đăng nhập chưa
}

<div class="container mt-5">
    <div class="row">
        <!-- Ảnh sách -->
        <div class="col-md-4 text-center">
            <img src="~/images/sach/@Model.HinhAnh"
                 class="img-fluid rounded border"
                 alt="@Model.TenSach"
                 style="max-height:250px; object-fit:cover;" />
        </div>

        <!-- Thông tin chi tiết -->
        <div class="col-md-8">
            <h2 class="text-primary fw-bold">@Model.TenSach</h2>
            <p class="text-muted">
                <i class="bi bi-eye"></i> @Model.LuotXem lượt xem
            </p>

            <h4 class="text-danger fw-bold">
                Giá: @Model.GiaBan.ToString("N0") VNĐ
            </h4>

            <p><strong>NXB:</strong> @Model.MaNXBNavigation?.TenNXB</p>
            <p><strong>Năm xuất bản:</strong> @Model.NamXB</p>
            <p><strong>Số lượng còn:</strong> @Model.SoLuong</p>
            <p><strong>Mô tả:</strong> @Model.MoTa</p>

            <!-- Thể loại -->
            <p>
                <strong>Thể loại:</strong>
                @if (Model.Sach_TheLoais != null && Model.Sach_TheLoais.Any())
                {
                    foreach (var tl in Model.Sach_TheLoais)
                    {
                        <span class="badge bg-secondary me-1">@tl.MaLoaiNavigation.TenLoai</span>
                    }
                }
                else
                {
                    <span class="text-muted">Chưa có</span>
                }
            </p>

            <!-- Tác giả -->
            <p>
                <strong>Tác giả:</strong>
                @if (Model.Sach_TacGias != null && Model.Sach_TacGias.Any())
                {
                    foreach (var tg in Model.Sach_TacGias)
                    {
                        <span class="badge bg-info text-dark me-1">@tg.MaTGNavigation.TenTG</span>
                    }
                }
                else
                {
                    <span class="text-muted">Chưa rõ</span>
                }
            </p>

            <!-- Nút thao tác -->
            <div class="mt-4">
                @if (userId == null)
                {
                    <!-- Nếu chưa đăng nhập -->
                    <a asp-controller="Account" asp-action="Login"
                       class="btn btn-warning btn-lg me-2">
                        <i class="bi bi-box-arrow-in-right"></i> Đăng nhập để mua
                    </a>
                }
                else
                {
                    <!-- Nếu đã đăng nhập -->
                    <form asp-controller="GioHangs" asp-action="ThemVaoGio" method="post" class="d-inline">
                        <input type="hidden" name="maSach" value="@Model.MaSach" />
                        <button type="submit" class="btn btn-success btn-lg me-2">
                            <i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng
                        </button>
                    </form>

                    <form asp-controller="GioHangs" asp-action="MuaNgay" method="post" class="d-inline">
                        <input type="hidden" name="maSach" value="@Model.MaSach" />
                        <button type="submit" class="btn btn-danger btn-lg me-2">
                            <i class="bi bi-bag-check"></i> Mua ngay
                        </button>
                    </form>
                }

                <a href="@ViewBag.ReturnUrl" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>
